<h1>Enquire about <%= @property.name %></h1>

<%= form_with model: @enquiry, url: property_enquiries_path(@property), method: :post do |f| %>
  <div class="form-group">
    <%= f.label :message, "Your Message" %>
    <%= f.text_area :message, rows: 5, class: 'form-control' %>
  </div>
  <%= f.submit "Send Enquiry", class: "btn btn-primary mt-3" %>
<% end %>
