<h1>My Properties</h1>


<% if @properties.any? %>
  <% @properties.each do |property| %>
    <div class="property-card">
    <% if property.image.attached? %>
    <%= image_tag property.image, class: "property-image", alt: "Property Image" %>
  <% else %>
    <p>No image available</p>
  <% end %>
      <h3><%= property.name %></h3>
      <p><%= property.description %></p>
      <p><%= property.location %></p>
      <p><%= property.price %></p>
      
    </div>
  <% end %>
  <%= link_to 'Add New Property', new_property_path, class: 'btn btn-primary mb-3' %>
  
<% else %>
  <p>You don't have any properties yet. <%= link_to 'Add a Property', new_property_path, class: 'btn btn-primary' %></p>
<% end %>
